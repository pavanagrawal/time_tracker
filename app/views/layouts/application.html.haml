!!! 5
%html.no-js
  = render 'head'

  %body{ :class => "#{ controller.controller_name }" }
    = render 'chromeframe'
    = render 'header'
    = render 'flashes'

    = yield

    = hidden_field_tag :form_data_hidden, @dynamic_form.try(:form_data)
    = render 'footer'

    -# Javascript at the bottom for fast page loading
    = render 'javascripts'
